{
    "compilerOptions": {
        "target": "esnext",
        "module": "es6",
        "jsx": "react",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["./src/**/*"]
}
